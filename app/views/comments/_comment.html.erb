<div class="card">
  <div class="card-header">
    <div class="row justify-content-between">
      <div class="col-4">
        User: <%= comment.user.email %>
      </div>
      <div class="col-4">
        Status: <%= comment.status %>
      </div>
    </div>
  </div>
  <%if comment.user == current_user || comment.status == 'public'%>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%= comment.commenter %></p>
        <footer class="blockquote-footer"><%= comment.body %></footer>
        <div class="small text-muted">
          <div class="row">
            <div class="col-12 col-sm-6 col-md-8"></div>
            <div class="col-6 col-md-4">
              <div class="card-footer text-muted">
                <%= comment.created_at %>
              </div>
            </div>
          </div>
        </div>
      </blockquote>
    </div>
  <%end%>
</div>
<p>
  <%if comment.user == current_user%>
    <%= link_to 'Delete Comment', [comment.article, comment],
              method: :delete,
              data: { confirm: "Ey! Are you sure?" },
              class:"btn btn-outline-danger btn-sm" %>
  <%end%>
</p>
